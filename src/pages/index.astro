      height: 100%;
      border-radius: 12px;
      background: #00abff;
    }
    .front {
      display: block;
      position: relative;
      padding: 12px 42px;
      border-radius: 12px;
      color: white;
      background: #66ccff;
      will-change: transform;
      transform: translateY(-4px);
      transition: transform 600ms cubic-bezier(0.3, 0.7, 0.4, 1);
    }
    .pushable:hover {
      filter: brightness(110%);
    }
    .pushable:hover .front {
      transform: translateY(-6px);
      transition: transform 250ms cubic-bezier(0.3, 0.7, 0.4, 1.5);
    }
    .pushable:active .front {
      transform: translateY(-2px);
      transition: transform 34ms;
    }
    .pushable:hover .shadow {
      transform: translateY(4px);
      transition: transform 250ms cubic-bezier(0.3, 0.7, 0.4, 1.5);
    }
    .pushable:active .shadow {
      transform: translateY(1px);
      transition: transform 34ms;
    }
    .pushable:focus:not(:focus-visible) {
      outline: none;
    }
    .grid-item {
      width: min(50%, 400px) * 2;
      /* width: 500px; */
      font-size: max(1.2vw, 16px);
      margin: auto;
      margin-top: 30px;

      background-color: #66ccff;
      border-radius: 25px;
      box-shadow: 0px 8px #00abff;
      padding-bottom: 2px;
    }

    .grid-content {
      margin: 15px;
    }

    .highlight,
    .hidark {
      border-radius: 8px;
      padding-left: 5px;
      padding-right: 5px;
    }

    .highlight {
      background-image: var(--astro-gradient);
      animation: pulse 3s ease-in-out infinite;
      background-size: 100% 200%;
      background-position-y: 100%;
    }

    .hidark {
      background-color: #338eda;
    }

    .column-right-buffer {
      display: none;
    }

    .hidark {
      background-color: #1266aa;
    }

    /* for phone */
    @media screen and (max-width: 600px) {
      .infoBox {
        font-size: 20px;
        width: 100%;
        margin-left: 0px;
        margin-right: 0px;
      }
    }
    .column-left-buffer {
      display: none;
    }

    @media (min-width: 800px) {
      .row {
        display: flex;
      }

      .column-left {
        flex: 50%;
        padding-right: 7.5px;
      }

      .column-right {
        flex: 50%;
        padding-left: 7.5px;
      }

      .column-right-buffer {
        display: block;
      }

      .column-left-buffer {
        display: block;
      }
    }
  </style>
</Layout>
